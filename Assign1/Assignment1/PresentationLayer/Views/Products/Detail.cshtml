@model DataAccessLayer.Entities.Product

@{
    ViewData["Title"] = Model.Name;
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="mb-3">@Model.Name</h2>
                    <p class="text-muted">SKU: @Model.Sku</p>
                    
                    @if (Model.Brand != null)
                    {
                        <p><strong>Hãng:</strong> @Model.Brand.Name</p>
                    }
                    
                    <h3 class="text-primary my-3">@Model.Price.ToString("N0") VNĐ</h3>
                    
                    <div class="mb-3">
                        <strong>Mô tả:</strong>
                        <p>@Model.Description</p>
                    </div>
                    
                    <div class="mb-3">
                        <strong>Tồn kho:</strong> 
                        @if (Model.StockQuantity > 0)
                        {
                            <span class="badge bg-success">@Model.StockQuantity chiếc</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Hết hàng</span>
                        }
                    </div>

                </div>
            </div>
        </div>

        <div class="col-md-6">
            @if (ViewBag.Dealers != null)
            {
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4><i class="fas fa-calendar-check"></i> Đăng ký Lái thử MIỄN PHÍ</h4>
                    </div>
                    <div class="card-body">
                        <p class="text-muted mb-3">
                            <i class="fas fa-info-circle"></i> 
                            Điền thông tin bên dưới để đặt lịch lái thử. Chúng tôi sẽ liên hệ xác nhận với bạn sớm nhất.
                        </p>
                        
                        <form asp-controller="TestDrive" asp-action="Create" method="get">
                            <input type="hidden" name="productId" value="@Model.Id" />

                            <div class="mb-3">
                                <label class="form-label">Chọn Đại lý <span class="text-danger">*</span></label>
                                <select name="dealerId" class="form-select" required>
                                    <option value="">-- Chọn đại lý để lái thử --</option>
                                    @foreach (var dealer in ViewBag.Dealers as List<DataAccessLayer.Entities.Dealer>)
                                    {
                                        <option value="@dealer.Id">@dealer.Name - @dealer.Address</option>
                                    }
                                </select>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 btn-lg">
                                <i class="fas fa-calendar-plus"></i> Đăng ký lái thử
                            </button>
                        </form>

                        <div class="mt-3 p-3 bg-light rounded">
                            <h6 class="fw-bold mb-2">Quy trình lái thử:</h6>
                            <ol class="mb-0 ps-3">
                                <li>Chọn đại lý và điền thông tin</li>
                                <li>Chọn thời gian phù hợp</li>
                                <li>Chúng tôi liên hệ xác nhận</li>
                                <li>Đến đại lý và trải nghiệm xe</li>
                            </ol>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <a asp-controller="Home" asp-action="All" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>

