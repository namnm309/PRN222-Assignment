@model List<PresentationLayer.Models.EVMInventoryViewModel>
@{
    ViewData["Title"] = "Báo cáo tồn kho EVM";
    Layout = "_DashboardLayout";
}

<h2 class="mb-4">Quản lý tồn kho và tốc độ tiêu thụ</h2>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-white">
        <h5 class="mb-0">Bộ lọc báo cáo</h5>
    </div>
    <div class="card-body">
        <form asp-action="InventoryReport" method="get">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label for="brandId" class="form-label">Thương hiệu</label>
                    <select id="brandId" name="brandId" class="form-select">
                        <option value="">Tất cả thương hiệu</option>
                    </select>
                </div>
                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-primary">Xem báo cáo</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <p class="text-muted mb-1 small">Tổng số lượng tồn kho</p>
                <h3 class="mb-0 text-primary">@Model.Sum(x => x.CurrentStock)</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <p class="text-muted mb-1 small">Số sản phẩm tồn kho thấp</p>
                <h3 class="mb-0 text-warning">@Model.Count(x => x.StockStatus == "Low")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <p class="text-muted mb-1 small">Số sản phẩm hết hàng</p>
                <h3 class="mb-0 text-danger">@Model.Count(x => x.StockStatus == "OutOfStock")</h3>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-white">
        <h5 class="mb-0">Chi tiết tồn kho sản phẩm</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Sản phẩm</th>
                        <th>SKU</th>
                        <th>Thương hiệu</th>
                        <th>Tồn kho</th>
                        <th>Tốc độ tiêu thụ</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.ProductSku</td>
                            <td>@item.BrandName</td>
                            <td>@item.CurrentStock</td>
                            <td>@item.ConsumptionRate.ToString("F2")</td>
                            <td>
                                <span class="badge @(item.StockStatus == "OutOfStock" ? "bg-danger" : (item.StockStatus == "Low" ? "bg-warning" : "bg-success"))">
                                    @item.StockStatus
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">Không có dữ liệu tồn kho để hiển thị.</p>
        }
    </div>
</div>
