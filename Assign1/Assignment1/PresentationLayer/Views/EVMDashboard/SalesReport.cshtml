@model List<PresentationLayer.Models.EVMSalesReportViewModel>
@{
    ViewData["Title"] = "Báo cáo doanh số EVM";
    Layout = "_DashboardLayout";
}

<h2 class="mb-4">Báo cáo doanh số theo khu vực và đại lý</h2>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-white">
        <h5 class="mb-0">Bộ lọc báo cáo</h5>
    </div>
    <div class="card-body">
        <form asp-action="SalesReport" method="get">
            <div class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label for="regionId" class="form-label">Khu vực</label>
                    <select id="regionId" name="regionId" class="form-select">
                        <option value="">Tất cả khu vực</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="dealerId" class="form-label">Đại lý</label>
                    <select id="dealerId" name="dealerId" class="form-select">
                        <option value="">Tất cả đại lý</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="period" class="form-label">Kỳ báo cáo</label>
                    <select id="period" name="period" class="form-select">
                        <option value="monthly">Hàng tháng</option>
                        <option value="quarterly">Hàng quý</option>
                        <option value="yearly">Hàng năm</option>
                    </select>
                </div>
                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-primary">Xem báo cáo</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-6 col-lg-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <p class="text-muted mb-1 small">Tổng doanh số</p>
                <h3 class="mb-0 text-success">@(ViewBag.TotalSales?.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN")) ?? "0 VNĐ")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <p class="text-muted mb-1 small">Tổng số đơn hàng</p>
                <h3 class="mb-0 text-primary">@Model.Count</h3>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <p class="text-muted mb-1 small">Doanh số trung bình/đơn</p>
                <h3 class="mb-0 text-info">@((Model.Count > 0 ? Model.Average(x => x.TotalSales) : 0).ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN")))</h3>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-white">
        <h5 class="mb-0">Chi tiết báo cáo doanh số</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Khu vực</th>
                        <th>Đại lý</th>
                        <th>Mã đại lý</th>
                        <th>Doanh số</th>
                        <th>Số đơn hàng</th>
                        <th>Trung bình/đơn</th>
                        <th>Tỷ lệ hoàn thành</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.RegionName</td>
                            <td>@item.DealerName</td>
                            <td>@item.DealerCode</td>
                            <td>@item.TotalSales.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</td>
                            <td>@item.TotalOrders</td>
                            <td>@item.AverageOrderValue.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</td>
                            <td>@item.AchievementRate.ToString("F1")%</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">Không có dữ liệu doanh số để hiển thị.</p>
        }
    </div>
</div>
