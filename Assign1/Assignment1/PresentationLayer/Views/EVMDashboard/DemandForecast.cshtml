@model List<PresentationLayer.Models.EVMDemandForecastViewModel>
@{
    ViewData["Title"] = "AI Dự đoán nhu cầu EVM";
    Layout = "_DashboardLayout";
}

<h2 class="mb-4">AI Dự đoán nhu cầu để lập kế hoạch sản xuất & phân phối</h2>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-white">
        <h5 class="mb-0">Bộ lọc dự đoán</h5>
    </div>
    <div class="card-body">
        <form asp-action="DemandForecast" method="get">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label for="forecastPeriod" class="form-label">Số tháng dự đoán</label>
                    <input type="number" id="forecastPeriod" name="forecastPeriod" class="form-control" value="6" min="1" max="12" />
                </div>
                <div class="col-md-4">
                    <label for="productId" class="form-label">Sản phẩm</label>
                    <select id="productId" name="productId" class="form-select">
                        <option value="">Tất cả sản phẩm</option>
                    </select>
                </div>
                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-primary">Xem dự đoán</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <p class="text-muted mb-1 small">Độ chính xác mô hình AI</p>
                <h3 class="mb-0 text-info">85%</h3>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <p class="text-muted mb-1 small">Tổng số lượng dự báo</p>
                <h3 class="mb-0 text-primary">@Model.Sum(x => x.PredictedDemand)</h3>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-white">
        <h5 class="mb-0">Chi tiết dự đoán nhu cầu</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Sản phẩm</th>
                        <th>SKU</th>
                        <th>Thương hiệu</th>
                        <th>Khu vực</th>
                        <th>Nhu cầu hiện tại</th>
                        <th>Nhu cầu dự báo</th>
                        <th>Độ tin cậy</th>
                        <th>Xu hướng</th>
                        <th>Ưu tiên</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.ProductSku</td>
                            <td>@item.BrandName</td>
                            <td>@item.RegionName</td>
                            <td>@item.CurrentDemand</td>
                            <td>@item.PredictedDemand</td>
                            <td>@item.ConfidenceLevel.ToString("P1")</td>
                            <td>@item.Trend</td>
                            <td>@item.Priority</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">Không có dữ liệu dự đoán để hiển thị.</p>
        }
    </div>
</div>
